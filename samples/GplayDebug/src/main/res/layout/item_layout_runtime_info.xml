<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressbar="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@color/color_light_gold_FFD700"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/item_info"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="updateRuntimeCompatibility"/>

        <TextView
            android:id="@+id/item_msg"
            android:textSize="10sp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="updateRuntimeCompatibility"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:background="@color/color_light_green_FF99CC00"
        android:layout_height="match_parent">

        <com.zhy.view.HorizontalProgressBarWithNumber
            android:id="@+id/loading_progress"
            android:layout_width="100dp"
            android:layout_height="36dp"
            progressbar:progress_text_size="20sp"
            progressbar:progress_text_color="@color/color_light_gold_FFD700"
            progressbar:progress_text_offset="10dp"  />
    </LinearLayout>

</LinearLayout>