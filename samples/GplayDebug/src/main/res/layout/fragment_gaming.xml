<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_running_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View style="@style/split_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/start_slient_dl"
            android:text="@string/start_slient_downloading"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/pause_slient_dl"
            android:text="@string/pause_slient_downloading"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp" />
    </LinearLayout>

    <View style="@style/split_line"/>

    <GridView
        android:layout_weight="1"
        android:id="@+id/gridview"
        android:padding="10dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:listSelector="@drawable/grid_item_selector"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View style="@style/split_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/check_local_scene"
            android:text="@string/check_scene"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/start_preload_scene"
            android:text="@string/preload_scene"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp" />
    </LinearLayout>
</LinearLayout>
